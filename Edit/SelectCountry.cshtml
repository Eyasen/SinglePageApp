
@{
    Layout = null;
}

<div id="page-wrapper" ng-controller="myCtrll">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Country Update</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row" ng-init="getCountryInfo()">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Country Edit Form
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" ng-submit="UpdateCountry()">
                                <div class="form-group">
                                    @*<label for="inputdefault">Country Index</label>

                <input type="text" id="inputdefault" class="form-control" name="country.Country_Id" ng-model="country.Country_Id" value="{{country.Country_Id}}">*@

                                    @*country name input*@
                                    <label for="inputdefault">Country Name</label>

                                    <input type="text" id="inputdefault" class="form-control" ng-model="CountryInfo.countryName" />
                                </div>
                                <button type="submit" class="btn btn-success" value="submit">Update</button>
                                @*<a href="#" class="btn btn-info" role="button">Update Country</a>*@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
