
@{
    Layout = null;
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Country Index</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Registered Countries
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body" ng-controller="myCtrll">
                    <a href="#!/Country" class="fa-fast-backward" role="button">New Country</a>
                    <table class="table table-hover table table-condensed table table-bordered" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>COUNTRY NAME</th>
                                <th>DELETE</th>
                                <th>EDIT</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="odd gradeX" ng-repeat="country in CountryList">
                                <td>{{$index+1}}</td>
                                <td>{{country.Country_Name}}</td>
                                <td>
                                    <button type="button" class="btn btn-danger" data-ng-click="DeleteCountry(country)"><i class="fa fa-trash-o"></i></button>
                                </td>
                                <td>
                                    @*<button type="button" href="#!/Country/SelectCountry" class="btn btn-primary" data-ng-click="SelectCountry(country)">Edit</button>*@
                                    <a href="#!/Country/SelectCountry/{{country.Country_Id}}" class="btn btn-primary" role="button" data-ng-click="SelectCountry(country)"><i class="fa fa-edit"></i></a>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
