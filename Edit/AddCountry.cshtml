
@{
    Layout = null;
}

<div id="page-wrapper" ng-controller="myCtrll">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Country</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Country Registration Form
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" ng-submit="AddCountry()">
                                <div class="form-group">
                                    @*country name input*@
                                    <label for="inputdefault">Country Name</label>

                                    <input type="text" id="inputdefault" class="form-control" ng-model="Country.Country_Name" required>
                                </div>
                                <button type="submit" class="btn btn-success" value="submit">Save</button>
                                <a href="#!/Country/CountryIndex" class="btn btn-info" role="button">View Countries</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
